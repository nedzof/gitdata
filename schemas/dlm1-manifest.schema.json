{
  "$id": "schemas/dlm1-manifest.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DLM1 Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["datasetId", "provenance", "content"],
  "properties": {
    "datasetId": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["createdAt", "issuer"],
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "issuer": {
          "type": "string",
          "pattern": "^(02|03)[0-9a-fA-F]{64}$"
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "license": {
          "type": "string"
        },
        "classification": {
          "type": "string"
        }
      }
    },
    "content": {
      "type": "object",
      "additionalProperties": false,
      "required": ["contentHash"],
      "properties": {
        "contentHash": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        },
        "mediaType": {
          "type": "string"
        },
        "sizeBytes": {
          "type": "integer",
          "minimum": 0
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "parents": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9a-fA-F]{64}$"
      },
      "default": []
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  }
}
