{
   "$id":"schemas/advisory.schema.json",
   "$schema":"http://json-schema.org/draft-07/schema#",
   "title":"Advisory / Recall",
   "type":"object",
   "required":[
      "versionId",
      "severity",
      "reason",
      "signature"
   ],
   "properties":{
      "versionId":{
         "type":"string",
         "pattern":"^[0-9a-fA-F]{64}$"
      },
      "severity":{
         "type":"string",
         "enum":[
            "CRITICAL",
            "WARNING"
         ]
      },
      "reason":{
         "type":"string",
         "minLength":3
      },
      "issuerKey":{
         "type":"string",
         "pattern":"^[0-9a-fA-F]{66}$"
      },
      "issuedAt":{
         "type":"string",
         "format":"date-time"
      },
      "signature":{
         "type":"string",
         "minLength":10
      }
   },
   "additionalProperties":false
}
