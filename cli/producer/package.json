{
  "name": "bsv-overlay-producer-cli",
  "version": "1.0.0",
  "description": "BSV Overlay Network Producer CLI with full BRC stack integration (D15)",
  "main": "producer.ts",
  "bin": {
    "overlay-producer": "./producer.ts"
  },
  "scripts": {
    "start": "ts-node producer.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev": "ts-node-dev --respawn --transpile-only producer.ts"
  },
  "keywords": [
    "bsv",
    "overlay-network",
    "producer",
    "cli",
    "brc-stack",
    "blockchain",
    "micropayments",
    "streaming",
    "content-publishing"
  ],
  "author": "BSV Overlay Network Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "pg": "^8.11.0",
    "secp256k1": "^5.0.0",
    "ws": "^8.14.0",
    "axios": "^1.5.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/secp256k1": "^4.0.6",
    "@types/ws": "^8.5.0",
    "@types/jest": "^29.5.0",
    "@types/inquirer": "^8.2.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/tests/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "brc_integrations/**/*.ts",
      "database/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bsv-overlay/producer-cli.git"
  },
  "bugs": {
    "url": "https://github.com/bsv-overlay/producer-cli/issues"
  },
  "homepage": "https://github.com/bsv-overlay/producer-cli#readme"
}